---
# Kagent Add-on Configuration
# Copy this file to kagent-config.yml and update with your values

# Cluster Configuration
cluster_ip: "192.168.1.100"  # Your Kubernetes cluster IP
cluster_name: "k8s-cluster"

# Kagent Configuration
kagent_namespace: "kagent"
kagent_version: "latest"

# LLM Provider Configuration
# Choose one or more providers (at least one is required)
# Option 1: Ollama (local LLM) - recommended for privacy
ollama_model: "llama3.1:8b"  # Model to use with Ollama (e.g., llama3.1:8b, mistral:7b)
ollama_host: "http://ollama.ollama.svc.cluster.local"  # Ollama service endpoint (optional, defaults to local)

# Option 2: OpenAI GPT API - for advanced capabilities
openai_api_key: "sk-your-openai-api-key-here"
openai_model: "gpt-4"  # or gpt-3.5-turbo, gpt-4-turbo

# Option 3: Anthropic Claude API
anthropic_api_key: "sk-ant-your-anthropic-api-key-here"
anthropic_model: "claude-3-sonnet"  # or claude-3-opus, claude-3-haiku

# GitOps Configuration
git_repo_url: "https://github.com/Spectro34/CFP-kagent.git"
git_branch: "main"
git_username: "your-git-username"
git_token: "your-git-token"

# Resource Configuration
kagent_resources:
  requests:
    memory: "1Gi"
    cpu: "0.5"
  limits:
    memory: "2Gi"
    cpu: "1"

# MCP Tools Configuration
prometheus_url: "http://prometheus-server.monitoring.svc.cluster.local"
grafana_url: "http://grafana.monitoring.svc.cluster.local"

# Demo Configuration
demo_enabled: true
demo_app_namespace: "demo"
demo_app_replicas: 2
